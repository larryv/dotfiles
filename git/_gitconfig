[alias]
	c = commit --verbose
	ca = commit --verbose --amend
	d = diff
	dc = diff --cached
	l = log
	rc = rebase --continue
	ri = rebase --interactive
	s = status
	sb = show-branch
[color]
	branch = auto
	diff = auto
[core]
	autocrlf = input
	excludesfile = __PREFIX__/.gitexclude
[sendemail]
	suppresscc = self
[user]
	name = __NAME__
	email = __EMAIL__

[include]
	path = .gitconfig.local
