#!/bin/sh

# -----
# Install script for Git setup.
#
# Usage: sh setup [-f] [TARGET_DIRECTORY]
# -----

# Source shared functions, etc.
. ../common.sh || exit 2

# TODO: Try to factor out common script-level options.
git_FORCE=
while getopts f opt; do
    case $opt in
        f) git_FORCE=-f ;;
    esac
done
shift $(($OPTIND - 1))

git_SOURCES=git*
git_TARGET_DIR=${1:-$HOME}

CreateAbsoluteSymlinks -d $git_FORCE $git_SOURCES "$git_TARGET_DIR"
