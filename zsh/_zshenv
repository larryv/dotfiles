: "${ZDOTDIR=$HOME/.zsh}"

fpath=("$ZDOTDIR"/functions(N) "$fpath[@]")

# Source topic scripts.
sourced_scripts=
for script in "$ZDOTDIR"/zshenv.d/*.zsh(N-^/); do
    . "$script"
done
unset script

# Login and interactive shells will do this later.
if [[ ! -o LOGIN && ! -o INTERACTIVE ]]; then
    unset_sh_helper_functions 2>/dev/null
    unfunction emulated_eval unset_sh_helper_functions 2>/dev/null
    unset sourced_scripts
fi

# vim: set filetype=zsh:
